{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CreatorPack Chapters",
  "type": "object",
  "required": ["policy", "chapters"],
  "properties": {
    "policy": {
      "type": "object",
      "required": ["target_sec", "alignment"],
      "properties": {
        "target_sec": {"type": "number"},
        "alignment": {"type": "string"}
      }
    },
    "chapters": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["i", "start", "end", "title"],
        "properties": {
          "i": {"type": "integer"},
          "start": {"type": "number"},
          "end": {"type": "number"},
          "title": {"type": "string"}
        }
      }
    }
  }
}
