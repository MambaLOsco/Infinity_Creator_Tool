{
  "$schema": "https://schema.tauri.app/config/1",
  "package": {
    "productName": "CreatorPack",
    "version": "0.1.0"
  },
  "tauri": {
    "windows": [
      {
        "title": "CreatorPack",
        "width": 900,
        "height": 620
      }
    ],
    "allowlist": {
      "shell": {
        "all": false,
        "execute": true
      },
      "dialog": {
        "open": true
      },
      "fs": {
        "readFile": true
      }
    }
  },
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:5173",
    "distDir": "dist"
  }
}
